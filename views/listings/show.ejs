<% layout('./layouts/boilerplate') %>
    <script>
        const mapToken = "<%= process.env.MAP_TOKEN %>";
        const coordinates = <%- JSON.stringify(listing.geometry.coordinates) %>;
    </script>

    <body>
        <div class="row">
            <div class="col-12 col-md-8 offset-md-2">
                <h1 style="margin-left: 15px; margin-top: 15px;">
                    <%= listing.title %>
                </h1>
                <div class="card">
                    <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="Listing Image">
                    <div class="card-body">
                        <p class="card-text p-show">Owned By: <i>
                                <%= listing.owner.username %>
                            </i></p>
                        <p class="card-text p-show">
                            <%= listing.description %>
                        </p>
                        <p class="card-text p-show">&#8377; <%= listing.price.toLocaleString("en-IN") %>
                        </p>
                        <p class="card-text p-show">
                            <%= listing.location %>
                        </p>
                        <p class="card-text p-show">
                            <%= listing.country %>
                        </p>
                        <% if(currentUser && listing.owner._id.equals(currentUser._id)){%>
                            <div style="display: flex; margin-top: 15px;">
                                <button class="btn edit-btn"><a style="color: white; text-decoration: none;"
                                        href="/listing/<%= listing._id %>/edit">Edit</a></button>
                                <form method="post" action="/listing/<%= listing._id %>?_method=DELETE">
                                    <button class="btn btn-dark">Delete</button>
                                </form>
                            </div>
                            <% } %>

                                <hr>
                                <div class="col-12">
                                    <% if(currentUser) { %>
                                        <h4>Leave a Review</h4>
                                        <form action="/listing/<%= listing._id %>/reviews" method="post"
                                            class="mb-3 needs-validation" novalidate>
                                            <div class="mb-3 mt-3">
                                                <fieldset class="starability-grow">
                                                    <legend>Rating:</legend>
                                                    <input type="radio" id="no-rate" class="input-no-rate"
                                                        name="review[rating]" value="1" checked
                                                        aria-label="No rating." />
                                                    <input type="radio" id="first-rate1" name="review[rating]"
                                                        value="1" />
                                                    <label for="first-rate1" title="Terrible">1 star</label>
                                                    <input type="radio" id="first-rate2" name="review[rating]"
                                                        value="2" />
                                                    <label for="first-rate2" title="Not good">2 stars</label>
                                                    <input type="radio" id="first-rate3" name="review[rating]"
                                                        value="3" />
                                                    <label for="first-rate3" title="Average">3 stars</label>
                                                    <input type="radio" id="first-rate4" name="review[rating]"
                                                        value="4" />
                                                    <label for="first-rate4" title="Very good">4 stars</label>
                                                    <input type="radio" id="first-rate5" name="review[rating]"
                                                        value="5" />
                                                    <label for="first-rate5" title="Amazing">5 stars</label>
                                                </fieldset>
                                            </div>
                                            <div class="mb-3">
                                                <label for="comment" class="form-label">Comments</label>
                                                <textarea name="review[comment]" id="comment" cols="30" rows="5"
                                                    class="form-control" required></textarea>
                                            </div>
                                            <button class="btn btn-outline-dark">Submit</button>
                                        </form>
                                        <hr>
                                        <% } %>
                                            <% if(listing.reviews.length>0) { %>
                                                <p class="fs-4 fw-bold mb-4">All Reviews</p>

                                                <div class="row">
                                                    <% for (let review of listing.reviews) { %>
                                                        <div class="col-md-6 mb-4">
                                                            <div class="card border rounded-4 shadow-sm h-100 p-3"
                                                                style="border-color: #dee2e6;">
                                                                <div class="card-body p-0">

                                                                    <!-- Top section: Name and Rating -->
                                                                    <h6 class="fw-semibold mt-2 mb-4">
                                                                        @<%= review.author.username %>
                                                                    </h6>
                                                                    <p class="starability-result"
                                                                        data-rating="<%= review.rating %>">
                                                                    </p>
                                                                    <!-- Review comment -->
                                                                    <p class="text-muted fst-italic mb-4">"<%=
                                                                            review.comment %>"
                                                                    </p>
                                                                    <form
                                                                        action="/listing/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
                                                                        method="post" ">
                                                                    <button class=" btn btn-sm btn-dark">
                                                                        Delete</button>
                                                                    </form>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <% } %>
                                                </div>
                                                <% } %>
                                                    <div class="mt-4">
                                                        <h3>Where you'll be staying!</h3>
                                                        <div id="map"></div>
                                                    </div>

                                </div>

                    </div>

                </div>
            </div>
        </div>
    </body>
    <script src="/js/map.js"></script>